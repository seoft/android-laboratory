<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/shuffle_bar_height_padding"
    android:paddingBottom="@dimen/shuffle_bar_height_padding"
    android:paddingStart="@dimen/shuffle_bar_width_padding"
    android:paddingEnd="@dimen/shuffle_bar_width_padding">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemWriteShuffleTodoCardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shuffle_bar_height"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#9575cd"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/itemWriteShuffleTodoImageView"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="11dp"
                android:src="@drawable/ic_todo"
                android:tint="#fff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/itemWriteShuffleTodoTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemWriteShuffleTodoTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="7dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/itemWriteShuffleTodoImageView"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="ABCDaaaaaaaaaaaaaaaaaaaaaaaaqqqaaaaaaaaaaaaaaaaaa" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
