<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    android:layout_width="130dp"
    android:layout_height="70dp"
    android:layout_marginStart="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginRight="5dp">

    <LinearLayout
        android:id="@+id/itemHomeBadgellContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_timeset_times_gray_stroke"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/icon_timer_" />

        <TextView
            android:id="@+id/itemHomeBadgeTvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:textColor="#c8c8c8"
            android:textSize="10dp"
            tools:text="1/3" />

        <TextView
            android:id="@+id/itemHomeBadgeTvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0a0a0a"
            android:textSize="12dp"
            android:textStyle="bold"
            tools:text="00:00:59" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:scaleType="fitEnd"
            android:src="@drawable/btn_detail" />
    </LinearLayout>

    <ImageView
        android:id="@+id/itemHomeBadgeIvRepeat"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_non_repeat__"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        tools:targetApi="lollipop" />


    <ImageView
        android:id="@+id/itemHomeBadgeIvAdd"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_plus__"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:targetApi="lollipop" />


</androidx.constraintlayout.widget.ConstraintLayout>